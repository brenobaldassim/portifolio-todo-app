{
	"compilerOptions": {
		"target": "ES2020",
		"types": ["node", "jest"],
		"module": "commonjs",
		"lib": ["ES2020"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictPropertyInitialization": false,
		"strict": true,
		"allowJs": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"baseUrl": ".",
		"paths": {
			"@src/*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
